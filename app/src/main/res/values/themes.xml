<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TallyMobile" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>

    </style>
    <style name="Base.Theme.TallyMobile.Light" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
    </style>

    <style name="Theme.TallyMobile" parent="Base.Theme.TallyMobile" />
    <style name="Theme.TallyMobile.Light" parent="Base.Theme.TallyMobile.Light"/>






    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/secondaryText</item>
    </style>
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>